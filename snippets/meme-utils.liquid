{% comment %} 
  Get price change indicator
  Usage: {% render 'meme-utils', action: 'price_change', current: 50000, previous: 48000 %}
{% endcomment %}
{% if action == 'price_change' %}
  {% assign change = current | minus: previous %}
  {% assign change_percent = change | times: 100.0 | divided_by: previous %}
  {% if change > 0 %}
    <span class="text-green-500 flex items-center">
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3.293 9.707a1 1 0 010-1.414l6-6a1 1 0 011.414 0l6 6a1 1 0 01-1.414 1.414L11 5.414V17a1 1 0 11-2 0V5.414L4.707 9.707a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
      </svg>
      +{{ change_percent | round: 2 }}%
    </span>
  {% elsif change < 0 %}
    <span class="text-red-500 flex items-center">
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M16.707 10.293a1 1 0 010 1.414l-6 6a1 1 0 01-1.414 0l-6-6a1 1 0 111.414-1.414L9 14.586V3a1 1 0 012 0v11.586l4.293-4.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
      </svg>
      {{ change_percent | round: 2 }}%
    </span>
  {% else %}
    <span class="text-text-secondary flex items-center">
      <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
      </svg>
      0.00%
    </span>
  {% endif %}
{% endif %}

