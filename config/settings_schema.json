[
  {
    "name": "theme_info",
    "theme_name": "MemeStyle Studio",
    "theme_version": "1.0.0",
    "theme_author": "MemeStyle Studio",
    "theme_documentation_url": "https://github.com/memestyle/theme-docs",
    "theme_support_url": "https://discord.gg/memestyle"
  },
  {
    "name": "Brand & Logo",
    "settings": [
      {
        "type": "header",
        "content": "Logo & Branding"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo",
        "info": "Upload your MemeStyle Studio logo"
      },
      {
        "type": "text",
        "id": "shop_name",
        "label": "Shop Name",
        "default": "MemeStyle Studio",
        "info": "Your store name"
      },
      {
        "type": "textarea",
        "id": "shop_description",
        "label": "Shop Description",
        "default": "Custom streetwear for traders, holders & meme believers.",
        "info": "Brief description of your store"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32x32px favicon for browser tabs"
      },
      {
        "type": "image_picker",
        "id": "apple_touch_icon",
        "label": "Apple Touch Icon",
        "info": "180x180px icon for iOS devices"
      },
      {
        "type": "image_picker",
        "id": "og_image",
        "label": "Social Media Image",
        "info": "1200x630px image for social media sharing"
      }
    ]
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "header",
        "content": "Primary Colors"
      },
      {
        "type": "color",
        "id": "primary_color",
        "label": "Primary Color",
        "default": "#00F6FF",
        "info": "Main brand color (neon cyan)"
      },
      {
        "type": "color",
        "id": "primary_color_dark",
        "label": "Primary Color Dark",
        "default": "#00D4E6"
      },
      {
        "type": "color",
        "id": "primary_color_light",
        "label": "Primary Color Light",
        "default": "#33F8FF"
      },
      {
        "type": "color",
        "id": "accent_color",
        "label": "Accent Color",
        "default": "#F5B6FF",
        "info": "Secondary brand color (pink glow)"
      },
      {
        "type": "color",
        "id": "accent_color_dark",
        "label": "Accent Color Dark",
        "default": "#E894FF"
      },
      {
        "type": "color",
        "id": "accent_color_light",
        "label": "Accent Color Light",
        "default": "#F8C8FF"
      },
      {
        "type": "header",
        "content": "Background Colors"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background Color",
        "default": "#0A0A0A",
        "info": "Main background color"
      },
      {
        "type": "color",
        "id": "background_secondary",
        "label": "Secondary Background",
        "default": "#1A1A1A"
      },
      {
        "type": "color",
        "id": "background_tertiary",
        "label": "Tertiary Background",
        "default": "#2A2A2A"
      },
      {
        "type": "header",
        "content": "Text Colors"
      },
      {
        "type": "color",
        "id": "text_primary",
        "label": "Primary Text",
        "default": "#FFFFFF"
      },
      {
        "type": "color",
        "id": "text_secondary",
        "label": "Secondary Text",
        "default": "#B3B3B3"
      },
      {
        "type": "color",
        "id": "text_muted",
        "label": "Muted Text",
        "default": "#666666"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Selection"
      },
      {
        "type": "select",
        "id": "font_primary",
        "label": "Primary Font",
        "options": [
          {
            "value": "Inter",
            "label": "Inter"
          },
          {
            "value": "Poppins",
            "label": "Poppins"
          },
          {
            "value": "system-ui",
            "label": "System UI"
          }
        ],
        "default": "Inter"
      },
      {
        "type": "select",
        "id": "font_secondary",
        "label": "Secondary Font",
        "options": [
          {
            "value": "Poppins",
            "label": "Poppins"
          },
          {
            "value": "Inter",
            "label": "Inter"
          },
          {
            "value": "system-ui",
            "label": "System UI"
          }
        ],
        "default": "Poppins"
      },
      {
        "type": "header",
        "content": "Font Sizes"
      },
      {
        "type": "range",
        "id": "base_font_size",
        "min": 14,
        "max": 18,
        "step": 1,
        "unit": "px",
        "label": "Base Font Size",
        "default": 16
      },
      {
        "type": "range",
        "id": "heading_scale",
        "min": 1.1,
        "max": 1.5,
        "step": 0.1,
        "label": "Heading Scale",
        "default": 1.2,
        "info": "Scale factor for heading sizes"
      }
    ]
  },
  {
    "name": "Social Media",
    "settings": [
      {
        "type": "header",
        "content": "Social Media Links"
      },
      {
        "type": "url",
        "id": "social_twitter",
        "label": "Twitter/X URL",
        "info": "Your Twitter/X profile URL"
      },
      {
        "type": "url",
        "id": "social_instagram",
        "label": "Instagram URL",
        "info": "Your Instagram profile URL"
      },
      {
        "type": "url",
        "id": "social_discord",
        "label": "Discord URL",
        "info": "Your Discord server invite URL"
      },
      {
        "type": "url",
        "id": "social_telegram",
        "label": "Telegram URL",
        "info": "Your Telegram channel URL"
      },
      {
        "type": "url",
        "id": "social_tiktok",
        "label": "TikTok URL",
        "info": "Your TikTok profile URL"
      }
    ]
  },
  {
    "name": "Homepage Content",
    "settings": [
      {
        "type": "header",
        "content": "Homepage Settings"
      },
      {
        "type": "text",
        "id": "homepage_title",
        "label": "Homepage Title",
        "default": "Wear Your Crypto Identity",
        "info": "Main headline for homepage"
      },
      {
        "type": "text",
        "id": "homepage_subtitle",
        "label": "Homepage Subtitle",
        "default": "Custom streetwear for traders, holders & meme believers.",
        "info": "Subtitle text for homepage"
      },
      {
        "type": "text",
        "id": "cta_button_text",
        "label": "CTA Button Text",
        "default": "Explore Collections",
        "info": "Call-to-action button text"
      },
      {
        "type": "collection",
        "id": "featured_collection",
        "label": "Featured Collection",
        "info": "Collection to feature on homepage"
      },
      {
        "type": "image_picker",
        "id": "hero_background_image",
        "label": "Hero Background Image",
        "info": "Background image for hero section"
      }
    ]
  },
  {
    "name": "Cart & Checkout",
    "settings": [
      {
        "type": "header",
        "content": "Cart Settings"
      },
      {
        "type": "checkbox",
        "id": "show_cart_drawer",
        "label": "Show Cart Drawer",
        "default": true,
        "info": "Display cart as a slide-out drawer"
      },
      {
        "type": "checkbox",
        "id": "enable_ajax_cart",
        "label": "Enable AJAX Cart",
        "default": true,
        "info": "Add products to cart without page reload"
      },
      {
        "type": "text",
        "id": "cart_empty_message",
        "label": "Empty Cart Message",
        "default": "Your cart is empty. Time to HODL some drip! ðŸš€",
        "info": "Message shown when cart is empty"
      }
    ]
  },
  {
    "name": "SEO & Analytics",
    "settings": [
      {
        "type": "header",
        "content": "SEO Settings"
      },
      {
        "type": "text",
        "id": "google_analytics_id",
        "label": "Google Analytics ID",
        "info": "Your Google Analytics tracking ID"
      },
      {
        "type": "text",
        "id": "facebook_pixel_id",
        "label": "Facebook Pixel ID",
        "info": "Your Facebook Pixel tracking ID"
      },
      {
        "type": "textarea",
        "id": "custom_head_code",
        "label": "Custom Head Code",
        "info": "Additional code to add to <head> section"
      },
      {
        "type": "textarea",
        "id": "custom_body_code",
        "label": "Custom Body Code",
        "info": "Additional code to add before closing </body> tag"
      }
    ]
  },
  {
    "name": "Print-on-Demand",
    "settings": [
      {
        "type": "header",
        "content": "Print-on-Demand Integration"
      },
      {
        "type": "select",
        "id": "pod_provider",
        "label": "POD Provider",
        "options": [
          {
            "value": "printful",
            "label": "Printful"
          },
          {
            "value": "printify",
            "label": "Printify"
          },
          {
            "value": "custom",
            "label": "Custom API"
          }
        ],
        "default": "printful"
      },
      {
        "type": "text",
        "id": "pod_api_key",
        "label": "API Key",
        "info": "Your Print-on-Demand API key"
      },
      {
        "type": "checkbox",
        "id": "enable_product_preview",
        "label": "Enable Product Preview",
        "default": true,
        "info": "Show live preview of customized products"
      },
      {
        "type": "checkbox",
        "id": "enable_text_customization",
        "label": "Enable Text Customization",
        "default": true,
        "info": "Allow customers to add custom text to products"
      }
    ]
  },
  {
    "name": "Performance",
    "settings": [
      {
        "type": "header",
        "content": "Performance Settings"
      },
      {
        "type": "checkbox",
        "id": "enable_lazy_loading",
        "label": "Enable Lazy Loading",
        "default": true,
        "info": "Load images only when they come into view"
      },
      {
        "type": "checkbox",
        "id": "minify_css",
        "label": "Minify CSS",
        "default": true,
        "info": "Compress CSS files for faster loading"
      },
      {
        "type": "checkbox",
        "id": "minify_js",
        "label": "Minify JavaScript",
        "default": true,
        "info": "Compress JavaScript files for faster loading"
      },
      {
        "type": "range",
        "id": "image_quality",
        "min": 60,
        "max": 100,
        "step": 5,
        "unit": "%",
        "label": "Image Quality",
        "default": 85,
        "info": "Quality of compressed images"
      }
    ]
  }
]

