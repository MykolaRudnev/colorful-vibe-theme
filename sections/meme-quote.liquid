{% schema %}
{
  "name": "Meme Quote",
  "tag": "section",
  "class": "meme-quote-section",
  "settings": [
    {
      "type": "header",
      "content": "Quote Settings"
    },
    {
      "type": "select",
      "id": "quote_type",
      "label": "Quote Type",
      "options": [
        {
          "value": "crypto",
          "label": "Crypto Quotes"
        },
        {
          "value": "meme",
          "label": "Meme Quotes"
        }
      ],
      "default": "crypto",
      "info": "Choose between crypto-themed or meme quotes"
    },
    {
      "type": "textarea",
      "id": "custom_quote",
      "label": "Custom Quote",
      "info": "Leave blank to use random quotes from the selected type"
    },
    {
      "type": "header",
      "content": "Display Options"
    },
    {
      "type": "checkbox",
      "id": "show_quote_icon",
      "label": "Show Quote Icon",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_attribution",
      "label": "Show Attribution",
      "default": true
    },
    {
      "type": "text",
      "id": "attribution_name",
      "label": "Attribution Name",
      "info": "Leave blank to use default attribution"
    },
    {
      "type": "checkbox",
      "id": "show_reactions",
      "label": "Show Emoji Reactions",
      "default": true
    },
    {
      "type": "header",
      "content": "Call to Action"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "info": "Link for the call-to-action button"
    }
  ],
  "presets": [
    {
      "name": "Meme Quote",
      "settings": {
        "quote_type": "crypto",
        "show_quote_icon": true,
        "show_attribution": true,
        "show_reactions": true,
        "button_text": "Shop Now",
        "button_url": "/collections"
      }
    }
  ]
}
{% endschema %}
