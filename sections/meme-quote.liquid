{% comment %} Select random quote {% endcomment %}
{% if section.settings.quote_type == 'crypto' %}
  {% assign selected_quotes = crypto_quotes %}
{% else %}
  {% assign selected_quotes = meme_quotes %}
{% endif %}

{% assign quote_index = 'now' | date: '%S' | modulo: selected_quotes.size %}
{% assign selected_quote = selected_quotes[quote_index] %}

{% comment %} Override with custom quote if provided {% endcomment %}
{% if section.settings.custom_quote != blank %}
  {% assign selected_quote = section.settings.custom_quote %}
{% endif %}

<div class="meme-quote py-16 lg:py-24 bg-background relative overflow-hidden w-full" style="width: 100vw; margin-left: calc(-50vw + 50%);">
  {% comment %} Background Pattern {% endcomment %}
  <div class="absolute inset-0 opacity-5">
    <div class="cyber-grid w-full h-full"></div>
  </div>

  {% comment %} Floating Elements {% endcomment %}
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-32 h-32 bg-primary/10 rounded-full blur-2xl animate-pulse-slow"></div>
    <div class="absolute bottom-1/3 right-1/3 w-48 h-48 bg-accent/10 rounded-full blur-2xl animate-pulse-slow" style="animation-delay: 2s;"></div>
    <div class="absolute top-1/2 right-1/4 w-24 h-24 bg-primary/20 rounded-full blur-xl animate-float"></div>
  </div>

  <div class="relative z-10 w-full px-4 sm:px-6 lg:px-8 text-center">
    <div class="space-y-8">
      {% comment %} Quote Icon {% endcomment %}
      {% if section.settings.show_quote_icon %}
        <div class="flex justify-center">
          <div class="w-16 h-16 bg-gradient-to-r from-primary to-accent rounded-full flex items-center justify-center animate-glow">
            <svg class="w-8 h-8 text-background" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>
        </div>
      {% endif %}

      {% comment %} Main Quote {% endcomment %}
      <blockquote class="space-y-6">
        <p class="text-xl sm:text-2xl lg:text-3xl font-medium font-poppins leading-relaxed text-text-primary">
          <span class="text-gradient bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
            "{{ selected_quote }}"
          </span>
        </p>

        {% comment %} Quote Attribution {% endcomment %}
        {% if section.settings.show_attribution %}
          <footer class="flex items-center justify-center space-x-3">
            {% if section.settings.attribution_name != blank %}
              <cite class="text-lg font-semibold text-text-secondary font-inter not-italic">
                â€” {{ section.settings.attribution_name }}
              </cite>
            {% else %}
              <cite class="text-lg font-semibold text-text-secondary font-inter not-italic">
                â€” {{ section.settings.quote_type | capitalize }} Community
