            {% comment %} Additional Floating Elements {% endcomment %}
            <div class="absolute top-16 right-16 w-12 h-12 bg-gradient-to-r from-primary to-accent rounded-lg rotate-45 animate-float" style="animation-delay: 1s;"></div>
            <div class="absolute bottom-16 left-16 w-8 h-8 bg-gradient-to-r from-accent to-primary rounded-full animate-float" style="animation-delay: 3s;"></div>
            <div class="absolute top-1/2 right-8 w-6 h-6 bg-primary/40 rounded-full animate-pulse" style="animation-delay: 2s;"></div>
            <div class="absolute bottom-1/3 right-1/3 w-4 h-4 bg-accent/40 rounded-full animate-pulse" style="animation-delay: 4s;"></div>
          </div>

          {% comment %} Product Categories Ticker {% endcomment %}
          <div class="absolute bottom-8 left-0 right-0 bg-background-secondary/80 backdrop-blur-md rounded-lg p-4 border border-primary/20">
            <div class="flex items-center justify-between text-sm">
              <div class="flex items-center space-x-2">
                <span class="text-primary">ðŸ‘•</span>
                <span class="text-white font-semibold">T-Shirts</span>
                <span class="text-green-400">New Designs</span>
              </div>
              <div class="flex items-center space-x-2">
                <span class="text-accent">ðŸ©³</span>
                <span class="text-white font-semibold">Tank Tops</span>
                <span class="text-green-400">Summer Ready</span>
              </div>
              <div class="flex items-center space-x-2">
                <span class="text-primary">ðŸ§¥</span>
                <span class="text-white font-semibold">Sweatshirts</span>
                <span class="text-green-400">Cozy Vibes</span>
              </div>
            </div>
          </div>

          {% comment %} Scroll Indicator for Desktop {% endcomment %}
          {% if section.settings.show_scroll_indicator %}
            <div class="absolute bottom-8 right-8 animate-bounce-slow hidden lg:block">
              <div class="w-6 h-10 border-2 border-primary rounded-full flex justify-center">
                <div class="w-1 h-3 bg-primary rounded-full mt-2 animate-pulse"></div>
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  {% comment %} Floating Crypto Elements {% endcomment %}
  {% if section.settings.show_floating_elements %}
    <div class="absolute inset-0 pointer-events-none overflow-hidden">
      <div class="absolute top-1/4 left-8 text-primary/20 text-6xl animate-float" style="animation-delay: 0s;">â‚¿</div>
      <div class="absolute top-1/3 right-12 text-accent/20 text-4xl animate-float" style="animation-delay: 2s;">ðŸš€</div>
      <div class="absolute bottom-1/3 left-16 text-primary/20 text-5xl animate-float" style="animation-delay: 4s;">ðŸ’Ž</div>
