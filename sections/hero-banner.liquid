{% comment %}
  Hero Banner Section for MemeStyle Studio
  Features: Customizable title, subtitle, button, background image, and animations
{% endcomment %}

<div class="hero-banner relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-br from-background via-background-secondary to-background-tertiary w-full" style="width: 100vw; margin-left: calc(-50vw + 50%);">
  {% comment %} Background Image {% endcomment %}
  {% if section.settings.background_image %}
    <div class="absolute inset-0 z-0">
      {% render 'image', 
        image: section.settings.background_image,
        class: 'w-full h-full object-cover opacity-20',
        loading: 'eager'
      %}
    </div>
  {% endif %}

  {% comment %} Animated Background Elements {% endcomment %}
  <div class="absolute inset-0 z-0">
    <div class="cyber-grid absolute inset-0 opacity-10"></div>
    <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-primary/10 rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-accent/10 rounded-full blur-3xl animate-pulse-slow" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 bg-primary/20 rounded-full blur-2xl animate-float"></div>
  </div>

  {% comment %} Main Content {% endcomment %}
  <div class="relative z-10 w-full px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center min-h-screen">
      
      {% comment %} Left Side Content {% endcomment %}
      <div class="lg:col-span-5 space-y-8 text-center lg:text-left">
      {% comment %} Main Headline {% endcomment %}
      <div class="space-y-4 animate-slide-in-up">
        {% if section.settings.title != blank %}
          <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold font-poppins leading-tight">
            <span class="text-gradient bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
              {{ section.settings.title | escape }}
            </span>
          </h1>
        {% else %}
          <h1 class="text-4xl sm:text-5xl lg:text-7xl font-bold font-poppins leading-tight">
            <span class="text-gradient bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
              {{ settings.homepage_title | default: 'Wear Your Crypto Identity' }}
            </span>
          </h1>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <p class="text-lg sm:text-xl lg:text-2xl text-text-secondary max-w-3xl mx-auto font-inter">
            {{ section.settings.subtitle | escape }}
          </p>
        {% else %}
          <p class="text-lg sm:text-xl lg:text-2xl text-text-secondary max-w-3xl mx-auto font-inter">
            {{ settings.homepage_subtitle | default: 'Custom streetwear for traders, holders & meme believers.' }}
          </p>
        {% endif %}
      </div>

      {% comment %} Call-to-Action Buttons {% endcomment %}
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-slide-in-up" style="animation-delay: 0.3s;">
        {% if section.settings.button_text != blank and section.settings.button_url != blank %}
          <a href="{{ section.settings.button_url }}" 
             class="btn-primary text-lg px-8 py-4 font-semibold tracking-wide uppercase">
            <span class="relative z-10">{{ section.settings.button_text | escape }}</span>
          </a>
        {% elsif section.settings.button_text != blank %}
          <a href="{{ collections[settings.featured_collection].url | default: '/collections' }}" 
             class="btn-primary text-lg px-8 py-4 font-semibold tracking-wide uppercase">
            <span class="relative z-10">{{ section.settings.button_text | escape }}</span>
          </a>
        {% else %}
          <a href="{{ collections[settings.featured_collection].url | default: '/collections' }}" 
             class="btn-primary text-lg px-8 py-4 font-semibold tracking-wide uppercase">
            <span class="relative z-10">{{ settings.cta_button_text | default: 'Explore Collections' }}</span>
          </a>
        {% endif %}

        {% if section.settings.secondary_button_text != blank and section.settings.secondary_button_url != blank %}
          <a href="{{ section.settings.secondary_button_url }}" 
             class="btn-secondary text-lg px-8 py-4 font-semibold tracking-wide uppercase">
            {{ section.settings.secondary_button_text | escape }}
          </a>
        {% endif %}
      </div>

      {% comment %} Featured Stats or Social Proof {% endcomment %}
      {% if section.settings.show_stats %}
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-8 mt-16 animate-slide-in-up" style="animation-delay: 0.6s;">
          {% if section.settings.stat_1_text != blank %}
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-primary font-poppins">{{ section.settings.stat_1_number | default: '10K+' }}</div>
              <div class="text-text-secondary font-inter">{{ section.settings.stat_1_text | escape }}</div>
            </div>
          {% endif %}
          {% if section.settings.stat_2_text != blank %}
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-primary font-poppins">{{ section.settings.stat_2_number | default: '50+' }}</div>
              <div class="text-text-secondary font-inter">{{ section.settings.stat_2_text | escape }}</div>
            </div>
          {% endif %}
          {% if section.settings.stat_3_text != blank %}
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-primary font-poppins">{{ section.settings.stat_3_number | default: '24/7' }}</div>
              <div class="text-text-secondary font-inter">{{ section.settings.stat_3_text | escape }}</div>
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% comment %} Scroll Indicator {% endcomment %}
      {% if section.settings.show_scroll_indicator %}
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce-slow lg:hidden">
          <div class="w-6 h-10 border-2 border-primary rounded-full flex justify-center">
            <div class="w-1 h-3 bg-primary rounded-full mt-2 animate-pulse"></div>
          </div>
        </div>
      {% endif %}
      </div>

      {% comment %} Right Side Visual Elements {% endcomment %}
      <div class="lg:col-span-7 relative">
        <div class="relative h-full min-h-[500px] lg:min-h-[600px]">
          
          {% comment %} Crypto-themed Visual Elements {% endcomment %}
          <div class="absolute inset-0 flex items-center justify-center">
            
            {% comment %} Main Crypto Symbol {% endcomment %}
            <div class="relative">
              <div class="w-64 h-64 lg:w-80 lg:h-80 bg-gradient-to-r from-primary/20 to-accent/20 rounded-full blur-3xl animate-pulse-slow"></div>
