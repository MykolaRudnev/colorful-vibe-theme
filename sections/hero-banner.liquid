</div>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "hero-banner-section",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Main Title",
      "default": "Wear Your Crypto Identity",
      "info": "Leave blank to use theme settings default"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Custom streetwear for traders, holders & meme believers.",
      "info": "Leave blank to use theme settings default"
    },
    {
      "type": "header",
      "content": "Buttons"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Primary Button Text",
      "default": "Explore Collections"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Primary Button URL",
      "info": "Leave blank to link to featured collection"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Secondary Button URL"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image",
      "info": "Optional background image (will be overlaid with dark gradient)"
    },
    {
      "type": "header",
      "content": "Features"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Show Statistics",
      "default": false,
      "info": "Display featured statistics below the CTA"
    },
    {
      "type": "text",
      "id": "stat_1_number",
      "label": "Statistic 1 Number",
      "default": "10K+"
    },
    {
      "type": "text",
      "id": "stat_1_text",
      "label": "Statistic 1 Text",
      "default": "Happy Customers"
    },
    {
      "type": "text",
      "id": "stat_2_number",
      "label": "Statistic 2 Number",
      "default": "50+"
    },
    {
      "type": "text",
      "id": "stat_2_text",
      "label": "Statistic 2 Text",
      "default": "Unique Designs"
    },
    {
      "type": "text",
      "id": "stat_3_number",
      "label": "Statistic 3 Number",
      "default": "24/7"
    },
    {
      "type": "text",
      "id": "stat_3_text",
      "label": "Statistic 3 Text",
      "default": "Support"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show Scroll Indicator",
      "default": true,
      "info": "Display animated scroll indicator at bottom"
    },
    {
      "type": "checkbox",
      "id": "show_floating_elements",
      "label": "Show Floating Crypto Elements",
      "default": true,
      "info": "Display floating crypto symbols and emojis"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "settings": {
        "title": "Wear Your Crypto Identity",
        "subtitle": "Custom streetwear for traders, holders & meme believers.",
        "button_text": "Explore Collections",
        "secondary_button_text": "Learn More",
        "show_stats": true,
        "show_scroll_indicator": true,
        "show_floating_elements": true
      }
    }
  ]
}
{% endschema %}
