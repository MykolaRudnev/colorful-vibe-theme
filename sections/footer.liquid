{% comment %}
  Footer Section for MemeStyle Studio
  Features: Social links, navigation, newsletter signup, payment methods, and crypto-themed styling
{% endcomment %}

<footer class="footer bg-background-secondary border-t border-background-tertiary w-full" style="width: 100vw; margin-left: calc(-50vw + 50%);">
  <div class="w-full px-4 sm:px-6 lg:px-8">
    
    {% comment %} Main Footer Content {% endcomment %}
    <div class="py-12 lg:py-16">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
        
        {% comment %} Brand Section {% endcomment %}
        <div class="lg:col-span-2 space-y-6">
          {% if settings.logo %}
            <div class="flex items-center">
              {% render 'image', 
                image: settings.logo,
                class: 'h-12 w-auto',
                alt: shop.name
              %}
            </div>
          {% else %}
            <h3 class="text-2xl font-bold font-poppins">
              <span class="text-gradient bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
                {{ settings.shop_name | default: shop.name }}
              </span>
            </h3>
          {% endif %}
          
          <p class="text-text-secondary max-w-md font-inter">
            {{ settings.shop_description | default: 'Custom streetwear for traders, holders & meme believers. Join the crypto fashion revolution!' }}
          </p>
          
          {% comment %} Social Media Links {% endcomment %}
          <div class="flex space-x-4">
            {% if settings.social_twitter %}
              <a href="{{ settings.social_twitter }}" target="_blank" rel="noopener noreferrer" 
                 class="text-text-secondary hover:text-primary transition-colors duration-300 p-2 hover:bg-background-tertiary rounded-lg"
                 aria-label="Follow us on Twitter">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
